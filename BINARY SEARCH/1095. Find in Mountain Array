/**
 * // This is the MountainArray's API interface.
 * // You should not implement it, or speculate about its implementation
 * class MountainArray {
 *   public:
 *     int get(int index);
 *     int length();
 * };
 */

class Solution {
public:
    int findInMountainArray(int target, MountainArray &mountainArr) {
        int n = mountainArr.length();

        int l = 0, r =n-1;
        while(l<r){
            int mid = l + (r-l)/2;
            if(mountainArr.get(mid)<mountainArr.get(mid+1))
            l= mid+1;
            else 
            r =mid;
        }
        int peak = l;



        int idx = binarySearchAsc(mountainArr, target , 0,peak);
        if(idx != -1) return idx;

        return binarySearchDesc(mountainArr ,target, peak+1, n -1);
    }

            private:
            int binarySearchAsc(MountainArray  &arr, int target , int  l, int r){
            while(l<= r){
                int mid = l+(r-l)/2;
                int val =arr.get(mid);
                if(val == target) return mid;
                else if(val< target) l =mid+1;
                else r = mid-1;
            }
            return -1;
        }

        int binarySearchDesc(MountainArray &arr, int target, int l ,int r){
            while(l<=r){
                int mid = l +(r-l)/2;
                int val = arr.get(mid);
                if(val==target) return mid;
                else if( val>target) l =mid +1;
                else r = mid-1;
            }
            return -1;
        

        
    }
};